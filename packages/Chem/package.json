{
  "name": "Chem",
  "version": "0.2",
  "fullName": "Cheminformatics support",
  "description": "Cheminformatics support: \n\n* RDKit-based rendering \n* Molecule sketching \n*",
  "sources": [
    "css/chem.css",
    "wasm/RDKit_minimal.js",
    "src/rdkit_cell_renderer.js",
    "src/rdkit_substructure_filter.js",
    "src/chem_column_property_panel.js",
    "src/chem_searches.js"
  ],
  "settings": {
    "description": "Chem rendering settings",
    "properties": [
      {
        "name": "Highlight on search",
        "propertyType": "bool",
        "description": "highlight substructures in the grid",
        "category": "Rendering",
        "defaultValue": true
      },
      {
        "name": "Structure renderer",
        "propertyType": "string",
        "choices": ["OpenChemLib", "RDKit"],
        "category": "Rendering",
        "defaultValue": "OpenChemLib"
      }
    ]
  }
}
